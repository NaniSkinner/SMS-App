{
  "name": "messageai-lambda",
  "version": "1.0.0",
  "description": "AI-powered scheduling assistant Lambda function",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "package": "npm run build && cd dist && zip -r ../function.zip . && cd ..",
    "deploy": "npm run package && aws lambda update-function-code --function-name messageai-service --zip-file fileb://function.zip",
    "test": "node dist/index.js"
  },
  "dependencies": {
    "openai": "^4.20.0",
    "googleapis": "^128.0.0",
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.130",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
